# Copy this file to .env and fill in your actual values

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_TIMEOUT=120000

# JWT Tokens (Replace with your actual tokens)
INTERVIEWS_JWT=your_jwt_token_here

# OpenRouter AI Configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_API_KEY=your_openrouter_api_key_here
NEXT_PUBLIC_OPENROUTER_REFERER=http://localhost:3000
OPENROUTER_TITLE=Interview System AI

# Frontend Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration (if needed in the future)
# DATABASE_URL=your_database_url_here
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=interview_system
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password

# Security Configuration (for production)
# NEXTAUTH_SECRET=your_nextauth_secret_here
# NEXTAUTH_URL=https://yourdomain.com

# File Upload Configuration
# MAX_FILE_SIZE=50MB
# ALLOWED_FILE_TYPES=audio/webm,video/webm,audio/wav,video/mp4
